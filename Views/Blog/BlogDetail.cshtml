@{
    var b = ViewBag.Blog as Blog;
}
<div class="sidebar">
    <a href="/Blog">List</a>
    <a href="/Blog/Create">New</a>
    <a href="#">Search</a>
</div>
<div class="containersang">
    <div class="search-bar">
        <form method="post" action="Update" enctype="multipart/form-data">
            <input name="id" value="@b.BlogId" hidden />
            <div style="background-color: #c1c3c5;padding-left: 5px; padding-top: 5px;padding-bottom:5px ; border-top-left-radius:3px ; border-top-right-radius:3px ;">
                <h4 style="margin: 0px;">Edit Blogs</h4>
            </div>
            <div class="form-group">
                <label for="title">Tiêu đề:</label><br>
                <input value="@b.Title" style="height: 30px; border-radius: 5px; width: 1150px;" type="text" id="title" name="title">
            </div>
            <div class="form-group">
                <label for="short-description">Mô tả ngắn:</label><br />
                <textarea style="border-radius: 5px; width: 1150px;" id="short-description" name="shortDescription" rows="3">@b.ShortDescription</textarea>
            </div>
            <div class="form-group">
                <label for="content">Chi tiết:</label><br />
                <textarea style="height: 30px; border-radius: 5px; width: 1150px;" id="content" name="content" rows="10">@b.Description</textarea>
            </div>
            <div class="form-group">
                <label for="image">Chọn ảnh:</label><br />
                <input type="file" id="image" name="image" accept="image/png, image/jpeg">
                <img src="@b.Img" style="width: 50px;height: 70px;" />
            </div>
            <div class="form-group">
                <label for="tags">Vị trí:</label><br />
                <input type="checkbox" value="Viet nam" name="location" @(b.Location.Contains("Viet nam") ? "checked" : "") /> Việt nam
                <input type="checkbox" value="Chau A" name="location" @(b.Location.Contains("Chau A") ? "checked" : "") /> Châu Á
                <input type="checkbox" value="Chau Au" name="location" @(b.Location.Contains("Chau Au") ? "checked" : "") /> Châu Âu
                <input type="checkbox" value="Chau My" name="location" @(b.Location.Contains("Chau My") ? "checked" : "") /> Châu Mỹ
            </div>
            <div class="form-group">
                <label for="public">Public</label><br />
                @if (b.Status.Value)
                {
                    <input type="radio" checked name="publicStatus" value="true" /> <span>Yes</span>
                    <input type="radio" name="publicStatus" value="false" /> <span>No</span>
                }
                else
                {
                    <input type="radio" name="publicStatus" value="true" /> <span>Yes</span>
                    <input type="radio" checked datepublic name="publicStatus" value="false" /> <span>No</span>
                }
            </div>
            <div style="display:flex">
                <div class="form-group">
                    <label for="date-public">Loại</label><br />
                    <select name="categoryId" style="width:550px; height: 30px;border-radius: 5px;">
                        @if (b.CategoryId == 1)
                        {
                            <option selected value="1">Kinh Doanh</option>
                        }
                        else
                        {

                            <option selected value="1">Kinh Doanh</option>
                        }
                        @if (b.CategoryId == 1)
                        {
                            <option selected value="1">Thế giới</option>
                        }
                        else
                        {

                            <option selected value="1">Thế giới</option>
                        }
                        @if (b.CategoryId == 1)
                        {
                            <option selected value="1">Thời sự</option>
                        }
                        else
                        {

                            <option selected value="1">Thời sự</option>
                        }
                        @if (b.CategoryId == 1)
                        {
                            <option selected value="1">Giải trí</option>
                        }
                        else
                        {

                            <option selected value="1">Giải trí</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <label for="date-public">Date Public</label><br />
                    <input value="@b.PublicDate?.ToString("yyyy-MM-dd")" style="width:550px; height: 30px;border-radius: 5px;" type="date" id="date-public" name="datepublic">
                </div>
            </div>

            <button type="submit">Submit</button>
            <button type="reset">Clear</button>
        </form>
    </div>
</div>

<script>
    function Search() {
        var sang = document.getElementById("sang").value;
        if (sang.length > 0) {
            window.location.href = "/Blog?tin=" + sang;
        }
    }
</script>
