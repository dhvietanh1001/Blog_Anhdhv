    }

    .sidebar {
        width: 250px;
        background-color: #333;
        color: #fff;
        padding: 1rem;
        height: 100vh;
        position: fixed;
        background-color: #f2f2f2;
    }

        .sidebar a {
            color: #000000;
            display: block;
            margin: 1rem 0;
            text-decoration: none;
        }

